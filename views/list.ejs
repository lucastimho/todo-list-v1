<%- include("./header") -%>
<h1><% listTitle %></h1>
    <div class="box">
        <% newListItems.forEach(function(n) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item.id%>" onChange="this.form.submit()">
                    <p><%= n.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
        <% }) %>
    </div>
    <form action="post" action="/" class="">
        <input type="text" name="newItem" placeholder="New Item">
        <button type="submit" name="button" value="<%= listItem %>">+</button>
    </form>
<%- include("./footer") -%> 